      "required": ["type"],
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "const": "count"
        },
        "filter": { "type": "string" },
        "options": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "limit": { "type": "integer" }
          }
        }
      }
    },
    "step_mongo_action_delete": {
